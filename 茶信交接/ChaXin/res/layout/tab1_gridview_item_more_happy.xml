<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/more_happy_pictrue"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:src="@drawable/cha_cha" />

    <TextView
        android:id="@+id/more_happy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="一湖塘茶叶，绿茶 2015春茶龙价差阿迪法师打发斯蒂芬斯蒂芬斯蒂芬斯蒂价差阿迪法师打发斯蒂芬斯蒂芬斯蒂芬斯蒂价差阿迪法师打发斯蒂芬斯蒂芬斯蒂芬斯蒂芬斯蒂芬啊第三方士大夫"
        android:textSize="@dimen/textsize_small" />

    <TextView
        android:id="@+id/more_happy_price"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:text="￥150.00"
        android:textColor="@color/theme_text_normal_color_red" />

</LinearLayout>