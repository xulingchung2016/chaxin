<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >

    <include layout="@layout/all_actionbar" />

    <View style="@style/all_divider_all_screen" />

    <RadioGroup
        android:id="@+id/tea_mall_radiogroup_choice"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/comment_all_comment"
            style="@style/all_radiobutton_teamall_"
            android:checked="true"
            android:text="@string/comment_all_comment" />

        <RadioButton
            android:id="@+id/teamall_sales_volume"
            style="@style/all_radiobutton_teamall_"
            android:text="@string/comment_good_comment" />

        <RadioButton
            android:id="@+id/comment_middle_comment"
            style="@style/all_radiobutton_teamall_"
            android:text="@string/comment_middle_comment" />

        <RadioButton
            android:id="@+id/comment_bad_comment"
            style="@style/all_radiobutton_teamall_"
            android:text="@string/comment_bad_comment" />
    </RadioGroup>
    
    
    
