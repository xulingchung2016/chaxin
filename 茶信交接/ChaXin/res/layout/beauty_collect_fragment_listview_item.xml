<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dip"
    android:background="@color/white"
     android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/beauty_collect_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/shape_imageview_kk"
        android:scaleType="fitXY"
        android:src="@drawable/cha" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@id/beauty_collect_imageview"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/num"
            android:visibility="gone"
            android:textColor="@color/theme_text_normal_color_gary"
            android:textSize="@dimen/textsize_middle" />

        <TextView
            android:id="@+id/beauty_collect_num"
            android:layout_width="120dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:text="10001"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_middle_1" />

        <ImageView
            android:id="@+id/beauty_collect_level"
            android:layout_width="36dip"
            android:layout_height="15dip"
            android:layout_marginLeft="20dip"
            android:src="@drawable/level_gold" />
    </LinearLayout>

    <TextView
        android:id="@+id/beauty_collect_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/beauty_collect_imageview"
        android:text="￥150.00"
        android:textColor="@color/theme_text_normal_color_red"
        android:textSize="@dimen/textsize_middle_1" />

    <TextView
        android:id="@+id/beauty_collect_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dip"
        android:layout_marginRight="8dip"
        android:text="成交558次"
        android:textColor="@color/theme_text_normal_color_gary"
        android:textSize="@dimen/textsize_small" />

</RelativeLayout>