<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
        <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="1dip"
        	android:paddingTop="12dip"
        	android:paddingBottom="12dip"
        	android:background="@color/white"
        	android:orientation="horizontal" >
        	
        	<LinearLayout
        		android:id="@+id/TeaMall_listview_AddressList_Layout"
        		android:layout_width="match_parent"
        		android:layout_height="wrap_content"
        		android:layout_alignParentLeft="true"
        		android:layout_marginLeft="15dip"
        		android:orientation="vertical" >
        		
        		<LinearLayout
        			android:id="@+id/TeaMall_listview_AddressList_Tel"
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:layout_alignParentTop="true" 
        			android:orientation="horizontal" >
        			
        			<LinearLayout
        			    android:id="@+id/linearlayout_name"
        			    android:layout_width="wrap_content"
        			    android:layout_height="wrap_content"
        			    android:layout_gravity="center"
        			    android:layout_marginTop="6dip" >
        			    
        			    <TextView
        			        android:id="@+id/textview_name"
        			        android:layout_width="wrap_content"
        			        android:layout_height="wrap_content"
        			        android:text="茶信" />
        			</LinearLayout>
        			
        			<LinearLayout
        			    android:id="@+id/linearlayout_phone"
        			    android:layout_gravity="center"
        			    android:layout_marginLeft="40dip"
        			    android:layout_width="wrap_content"
        			    android:layout_height="wrap_content"
        			    android:layout_marginTop="6dip" >
        			    
        			    <TextView
        			        android:id="@+id/textview_phone"
        			        android:layout_width="wrap_content"
        			        android:layout_height="wrap_content"
        			        android:text="18513497802" />
        			</LinearLayout>
        
        		</LinearLayout>
        		
        		<LinearLayout
        			android:id="@+id/TeaMall_listview_AddressList_Address"
        			android:layout_width="match_parent"
        			android:layout_height="wrap_content"
        			android:orientation="horizontal" >
        			<LinearLayout
        			    android:id="@+id/linearlayout_default_address"
        			    android:layout_alignParentLeft="true"
        			    android:layout_width="wrap_content"
        			    android:layout_height="wrap_content"
        			    android:layout_gravity="center"
        			    android:layout_marginTop="6dip" >
        			    
        			    <TextView
        			        android:id="@+id/textview_default_text"
        			        android:layout_width="wrap_content"
        			    	android:layout_height="wrap_content"
        			    	android:textColor="@color/theme_text_normal_color_red"
        			        android:text="[默认]" />
        			</LinearLayout>
        			
        			<LinearLayout
        			    android:id="@+id/linearlayout_receive_address"
        			    android:layout_gravity="center"
        			    android:layout_width="wrap_content"
        			    android:layout_height="wrap_content"
        			    android:layout_marginLeft="6dip"
        			    android:layout_marginTop="6dip" >
        			    
        			    <TextView
        			        android:id="@+id/textview_receive_address"
        			        android:layout_width="wrap_content"
        			    	android:layout_height="wrap_content"
        			        android:text="广东深圳 " />
        			</LinearLayout>
        		</LinearLayout>
        	
        	</LinearLayout>
        
        	<ImageView
            	android:id="@+id/order_listview_AddressList_Edit_Next_picture"
            	android:layout_alignParentRight="true"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_centerVertical="true"
        		android:layout_marginRight="8dip"
        		android:background="@drawable/arrows_right_gray" />
            
        </RelativeLayout>
    

</LinearLayout>
