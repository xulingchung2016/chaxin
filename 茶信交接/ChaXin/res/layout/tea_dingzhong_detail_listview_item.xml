<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/tea_space_10"
    android:paddingBottom="@dimen/tea_space_10">
    
    
    <ImageView 
        android:id="@+id/tea_dingzhong_detail_listview_imageview"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:src="@drawable/cha"
        android:scaleType="fitXY"
        
        />
    
    <TextView 
        android:id="@+id/tea_dingzhong_detail_listview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_text_normal_color"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/textsize_max"
        android:padding="8dip"
        />
</LinearLayout>
