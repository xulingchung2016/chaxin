<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/white"
    android:orientation="vertical" >
    <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="5dip"
        	android:layout_marginBottom="5dip"
        	android:id="@+id/TeaMall_listview_order_detail_Layout"
         	>
        	
        	<ImageView
        		android:id="@+id/iv_picture"
        		android:layout_alignParentLeft="true"
        		android:layout_width="70dp"
        		android:layout_height="70dp"
        		android:layout_centerVertical="true"
        		android:layout_marginBottom="4dip"
        		android:layout_marginLeft="4dip"
        		android:layout_marginTop="4dip"
        		android:scaleType="fitXY"
        		android:background="@drawable/cha" />
        	
        	

        	<LinearLayout
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignParentTop="true"
        	    android:layout_toRightOf="@+id/iv_picture"
        	    android:background="@color/white"
        	    android:orientation="vertical" >

        	    <TextView
        	        android:id="@+id/tv_name"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:maxWidth="150dip"
        	        android:singleLine="true"
        	        android:text="Y192"
        	        android:textSize="@dimen/textsize_max" />

        	    <TextView
        	        android:id="@+id/tv_price"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="Y55"
        	        android:textColor="@color/red" />

        	    <TextView
        	        android:id="@+id/tv_fwtime"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="服务时间：xxxxxx"
        	        android:textColor="@color/black" />

        	    <TextView
        	        android:id="@+id/tv_no"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:text="65656566"
        	        android:textColor="@color/black" />
        	</LinearLayout>
		<TextView
        	    android:id="@+id/tv_time"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:maxLines="1"
            	android:paddingRight="10dip"
            	android:textSize="10sp"
            	   android:layout_alignParentRight="true"
            	android:text="2015-10-23 00:00:00" />
        </RelativeLayout>
        <View
            android:id="@+id/TeaMall_listview_order_detail_Line"
        	style="@style/all_divider_all_screen"
        	android:layout_height="1dip" />
    <RelativeLayout
            android:id="@+id/TeaMall_listview_order_comment_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
        	android:layout_marginBottom="5dip"
            >
        	
        	<Button
            	android:id="@+id/btn_cancle"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:background="@drawable/delete"
            	android:textColor="@color/white"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:textSize="@dimen/textsize_max"/>
        	<Button
            	android:id="@+id/btn_phone"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_centerVertical="true"
            	android:layout_toRightOf="@+id/btn_cancle"
            	android:background="@drawable/but_red"
            	android:text="联系他"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:layout_marginLeft="10dip"
            	android:textColor="@color/white"
            	android:textSize="@dimen/textsize_max"/>
        	<Button
            	android:id="@+id/btn_pay"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_centerVertical="true"
            	android:paddingLeft="10dip"
            	android:paddingRight="10dip"
            	android:focusable="false"
            	android:focusableInTouchMode="false"
            	android:background="@drawable/but_orange_small"
            	android:text="立即付款"
            	android:textColor="@color/white"
            	android:textSize="@dimen/textsize_max"/>
    	</RelativeLayout>

</LinearLayout>
