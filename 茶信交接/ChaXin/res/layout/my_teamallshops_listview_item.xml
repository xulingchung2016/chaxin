<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    >
    
    <ImageView
        android:id="@+id/shop_listview_item_shops_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/shape_imageview_kk"
        android:scaleType="fitXY"
        android:src="@drawable/cha" />
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:paddingTop="12dip"
        android:paddingBottom="12dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shop_listview_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="2dip"
            
            android:maxLines="3"
            android:text=""
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_small" />
        
        <RelativeLayout
        android:id="@+id/TeaMall_listview_item_shop_descrip_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shop_listview_item_shop_name" >
        <TextView
            android:id="@+id/TeaMall_shop_listview_item_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="8dip"
            android:text=""
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_middle_1" />

    </RelativeLayout>
        
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_below="@id/TeaMall_listview_item_shop_descrip_Layout">

        <TextView
            android:id="@+id/TeaMall_shop_listview_item_goods_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="商品：4.8" />
        
        <TextView
            android:id="@+id/TeaMall_shop_listview_item_service_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="服务：4.8" />

        <TextView
            android:id="@+id/TeaMall_shop_listview_item_express_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="物流：4.8" />

    </RelativeLayout>
    </RelativeLayout>


</LinearLayout>