<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/my_small_tea_shop_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="4dip"
        android:paddingLeft="8dip"
        android:paddingTop="4dip"
        android:text="白脸谱红茶庄园"
        android:textColor="@color/theme_text_normal_color_black" />

    <View style="@style/all_divider_all_screen" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_small_tea_sort_name"
                style="@style/my_small_tea_textview"
                android:text="品种： 绿茶" />

            <TextView
                android:id="@+id/my_small_tea_price"
                style="@style/my_small_tea_textview"
                android:text="价格:" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    style="@style/my_small_tea_textview"
                    android:text="@string/tea_grow_state" />

                <TextView
                    android:id="@+id/my_small_tea_grow_state"
                    style="@style/my_small_tea_textview"
                    android:layout_marginLeft="0dip"
                    android:text="幼苗期"
                    android:textColor="@color/theme_text_normal_color_orange" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_small_tea_look"
                style="@style/my_small_tea_textview"
                android:text="查看茶苗" />

            <TextView
                android:id="@+id/my_small_tea_num"
                style="@style/my_small_tea_textview"
                android:text="@string/tea_num" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/my_small_tea_id"
        style="@style/my_small_tea_textview"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:gravity="left"
        android:layout_marginLeft="0dp"
        android:paddingLeft="8dp"
        android:text="@string/tea_id" />

</LinearLayout>