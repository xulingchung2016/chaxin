<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    >
    
    
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dip"
        android:paddingLeft="12dip"
        android:paddingRight="12dip"
        android:background="@color/white"
        android:orientation="horizontal" >
<ImageView
        android:id="@+id/order_listview_item_goods_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="4dip"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_imageview_kk"
        android:scaleType="fitXY" />
        <TextView
            android:id="@+id/order_listview_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@+id/order_listview_item_goods_picture"
            android:layout_marginRight="2dip"
            
            android:maxLines="2"
            android:text="张一元茉莉花茶张一元茉莉花茶张一一元茉莉花茶张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶"
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_max_1" />
        
        <RelativeLayout
        android:id="@+id/TeaMall_listview_item_goods_price_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/order_listview_item_goods_picture"
        android:layout_below="@id/order_listview_item_goods_name" >
        <TextView
            android:id="@+id/TeaMall_listview_item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="6dip"
            android:layout_marginTop="8dip"
            android:text="￥150.00"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_middle_1" />

    </RelativeLayout>
        
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:layout_toRightOf="@+id/order_listview_item_goods_picture"
         android:layout_below="@id/TeaMall_listview_item_goods_price_Layout">

        <TextView
            android:id="@+id/TeaMall_listview_item_goods_sellCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/line_gray"
            android:text="销量：2353" />
        


        <TextView
            android:id="@+id/TeaMall_listview_item_goods_sellPlace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
              android:textColor="@color/line_gray"
            android:layout_alignParentTop="true"
            android:text="杭州西湖" />

    </RelativeLayout>
    </RelativeLayout>


</LinearLayout>