<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/select_varieties_dialog_gridview_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_lineframe"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text="龙井"
        android:textColor="@color/theme_text_normal_color"
        android:textSize="@dimen/textsize_middle" />

    <ImageView
        android:id="@+id/select_varieties_dialog_gridview_imageview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/select_varieties_dialog_gridview_textview"
        android:layout_alignRight="@+id/select_varieties_dialog_gridview_textview"
        android:src="@drawable/lineframe_orange_right" />

</RelativeLayout>