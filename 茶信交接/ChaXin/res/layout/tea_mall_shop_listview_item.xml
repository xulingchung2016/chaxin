<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/shop_listview_item_imageview"
        android:layout_width="56dip"
        android:layout_height="56dip"
        android:padding="6dip"
        android:src="@drawable/cha_cha" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/shop_listview_item_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:maxLines="2"
            android:text="书香茶叶店"
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_middle" />

        <TextView
            android:id="@+id/shop_listview_item_shop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dip"
            android:maxLines="2"
            android:text="地址：深圳市宝安区"
            android:textColor="@color/theme_text_normal_color_gary"
            android:textSize="@dimen/textsize_small" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dip"
            android:layout_marginLeft="1dip"
            android:layout_marginRight="8dip" >

            <RelativeLayout style="@style/tea_mall_shop_linear" >

                <TextView
                    style="@style/tea_mall_shop_textivew"
                    android:text="商品" />

                <TextView
                    style="@style/tea_mall_shop_textivew2"
                    android:drawableRight="@drawable/shop_state_rise"
                    android:text="4.8" />
            </RelativeLayout>
            
            
            
            <RelativeLayout style="@style/tea_mall_shop_linear" >

                <TextView
                    style="@style/tea_mall_shop_textivew"
                    android:text="服务" />

                <TextView
                    style="@style/tea_mall_shop_textivew2"
                    android:drawableRight="@drawable/shop_state_rise"
                    android:text="4.8" />
            </RelativeLayout>
            
            
            
            <RelativeLayout style="@style/tea_mall_shop_linear" >

                <TextView
                    style="@style/tea_mall_shop_textivew"
                    
                    android:text="物流" />

                <TextView
                    style="@style/tea_mall_shop_textivew2"
                    android:drawableRight="@drawable/shop_state_rise"
                    android:text="4.8" />
            </RelativeLayout>
            
            
        </LinearLayout>
        
        
    </LinearLayout>

</LinearLayout>