<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
     <View
            android:id="@+id/TeaMall_listview_order_detail_Line"
        	style="@style/all_divider_all_screen"
        	android:layout_marginTop="10dp"
        	android:layout_height="2dip" />
    <RelativeLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginTop="5dip"
        	android:layout_marginBottom="5dip"
         	>
        	
        	<ImageView
        		android:id="@+id/iv_icon"
        		android:layout_alignParentLeft="true"
        		android:layout_width="64dp"
        		android:layout_height="64dp"
        		android:layout_centerVertical="true"
        		android:layout_marginBottom="4dip"
        		android:layout_marginLeft="4dip"
        		android:layout_marginTop="4dip"
        		android:background="@drawable/shape_imageview_kk"
        		android:scaleType="fitXY"
        		android:src="@drawable/cha" />
        	
        	<TextView
        	    android:id="@+id/tv_goodname"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:maxLines="3"
            	android:layout_centerVertical="true"
            	android:layout_marginLeft="10dip"
            	android:layout_toLeftOf="@+id/tv_price"
            	android:layout_toRightOf="@+id/iv_icon"
            	android:text="商品名称商品名称" />
        	
        	    
        	    <TextView
        	    android:id="@+id/tv_price"
            	android:layout_width="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_margin="10dip"
            	android:layout_height="wrap_content"
            	android:text="Y192" />
        	    
        	    <TextView
        	    android:id="@+id/tv_num"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_alignParentBottom="true"
            	android:layout_margin="10dip"
            	android:text="X2" />	    
        </RelativeLayout>
        
     <View
        	style="@style/all_divider_all_screen"
        	android:layout_height="2dip" />
     <LinearLayout 
          android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
       <TextView
            android:id="@+id/tv_tk"
            android:layout_width="50dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:gravity="center"
            android:layout_marginRight="6dip"
           android:background="@drawable/but_red"
            android:text="退款"
              android:visibility="invisible"
              android:layout_gravity="left"
            android:textColor="@color/White"
            android:textSize="@dimen/textsize_middle" />
          <TextView 
         android:id="@+id/tv_pj"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/lay_orange"
         android:text="评价"
         android:gravity="center"
         android:textSize="14sp"
         android:visibility="invisible"
         android:layout_margin="5dip"
         android:layout_gravity="right"
         android:background="@drawable/lineframe_orange"
         />
     </LinearLayout>
     

</LinearLayout>
