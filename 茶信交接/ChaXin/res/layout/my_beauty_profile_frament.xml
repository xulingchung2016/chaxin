<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >
    <ScrollView 
         android:layout_width="match_parent"
    android:layout_height="match_parent"
        >
        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
   

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="8dip"
        android:paddingBottom="10dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/beauty_profile_"
                    android:text="@string/name" />

                <EditText
                    android:id="@+id/et_name"
                    style="@style/beauty_profile_gray"
                    android:layout_width="fill_parent"
                    android:background="@null"
                    android:hint="输入呢称" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/beauty_profile_"
                    android:text="@string/my_beauty_profile_id" />

                <TextView
                    android:id="@+id/my_beauty_profile_id"
                    style="@style/beauty_profile_gray"
                    
                    android:text="1000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="vertical" >

                <ImageView
                    android:id="@+id/my_icon"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:scaleType="centerCrop"
                    android:background="@drawable/cha_cha" />
           
        </LinearLayout>
    </LinearLayout>
    
    
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        >
        
        
        <TextView 
            
         android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:padding="8dip"
            android:layout_alignParentLeft="true"
            />
        
        
        <EditText 
            android:id="@+id/my_phone"
            style="@style/all_tv_wrap_middle_black"
            android:hint="输入电话"
            android:padding="8dip"
            android:gravity="right"
            android:background="@null"
            android:inputType="phone"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            
            />
        
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        >
        
        
        <TextView 
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/become_beauty_in_tea_house"
            android:padding="8dip"
            android:layout_alignParentLeft="true"
            />
        
        
        <EditText 
            android:id="@+id/my_tea"
            style="@style/all_tv_wrap_middle_black"
            android:hint="填写茶馆编号"
            android:padding="8dip"
          android:gravity="right"
            android:background="@null"
            android:layout_marginLeft="80dip"
            android:textColor="@color/grey"
            android:layout_alignParentRight="true"
            
            />
        
    </RelativeLayout>
    
     <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/white"
        >
        
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_beauty_profile_sign"
            android:padding="8dip"
            android:layout_alignParentLeft="true"
            />
        
        
        <EditText 
            android:id="@+id/my_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/my_beauty_profile_sign_detail"
            android:padding="8dip"
            android:background="@null"
            android:text=""
            android:layout_marginLeft="100dip"
            android:layout_alignParentRight="true"
            
            />
        
    </RelativeLayout>
    <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丽人图片展示"
            android:padding="8dip"
            android:layout_alignParentLeft="true"
            />
     <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="70dip"
        android:background="#f1f1f1"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/btn_take_pic"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/btn_pic_bg" />

        <Gallery
            android:id="@+id/gallery"
            android:layout_width="match_parent"
            android:layout_height="70dip"
             android:layout_marginRight="10dip"
            android:gravity="center_vertical|left"
            android:spacing="0dp" />
    </LinearLayout>
    <Button 
            android:id="@+id/btn_save"
            android:layout_width="200dip"
            android:layout_height="35dip"
            android:layout_gravity="center_horizontal"
            android:background="@color/lay_orange"
            android:text="确定"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="30dip"
            android:textColor="@color/White"
            />
    
 </LinearLayout>
    </ScrollView>
</LinearLayout>

