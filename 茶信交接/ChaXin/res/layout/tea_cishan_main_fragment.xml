<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/viewflow_heigth" >

        <com.viewpagerindicator.MyDirectionalViewPager
            android:id="@+id/tea_cishan_main_image_viewlist"
            android:layout_width="match_parent"
            android:layout_height="@dimen/viewflow_heigth" />

        <com.viewpagerindicator.IconPageIndicator
            android:id="@+id/tea_cishan_main_viewflow_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tea_cishan_main_image_viewlist"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="6dip"
            android:layout_marginRight="6dip" >
        </com.viewpagerindicator.IconPageIndicator>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingTop="4dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有"
            android:textColor="@color/theme_text_color"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/love_nu_layout_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="份爱心"
            android:textColor="@color/theme_text_color"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/public_benefit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_background_color_gray"
        android:paddingBottom="2dip"
        android:paddingLeft="5dip"
        android:paddingTop="10dip"
        android:text="公益项目"
        android:textColor="@color/theme_text_normal_color_gary"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/public_benefit_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_emptydata"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />
    
</LinearLayout>