        android:textSize="@dimen/textsize_middle" />

    <LinearLayout
        style="@style/detail_linear_main_params"
        android:layout_marginTop="1dip" >

        <TextView
            style="@style/detail_textview1_main_params"
            android:text="@string/detail_viewpager_sort_name" />

        <TextView
            android:id="@+id/detail_viewpager_sort_name"
            style="@style/detail_textview2_main_params"
            android:text="铁观音" />
    </LinearLayout>

    <LinearLayout style="@style/detail_linear_main_params" >

        <TextView
            style="@style/detail_textview1_main_params"
            android:text="@string/detail_viewpager_sort" />

        <TextView
