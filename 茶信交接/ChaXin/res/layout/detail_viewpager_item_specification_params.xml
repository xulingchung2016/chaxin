            android:id="@+id/detail_viewpager_our_country_or_other_country"
            style="@style/detail_textview2_main_params"
            android:text="铁观音" />
    </LinearLayout>

    <LinearLayout style="@style/detail_linear_main_params" >

        <TextView
            style="@style/detail_textview1_main_params"
            android:text="@string/detail_viewpager_shelf_life" />

        <TextView
            android:id="@+id/detail_viewpager_shelf_life"
            style="@style/detail_textview2_main_params"
            android:text="铁观音" />
