<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >
    
    
    <include layout="@layout/all_actionbar"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <View
            style="@style/all_divider_all_screen"
            android:layout_marginLeft="@dimen/marginleft8dip" />

        <LinearLayout style="@style/receiver_address_linear" >

            <TextView
                style="@style/receiver_address_textview"
                android:text="@string/new_old_password" />

            <EditText
                android:id="@+id/et_pass_1"
                style="@style/receiver_address_edittext"
                android:inputType="textPassword"
                android:hint="@string/new_old_password2_hint" />
        </LinearLayout>

        <View
            style="@style/all_divider_all_screen"
            android:layout_marginLeft="@dimen/marginleft8dip" />

        <LinearLayout style="@style/receiver_address_linear" >

            <TextView
                style="@style/receiver_address_textview"
                android:text="@string/new_password" />

            <EditText
                android:id="@+id/et_pass_2"
                style="@style/receiver_address_edittext"
                 android:inputType="textPassword"
                android:hint="@string/new_password_hint" />
        </LinearLayout>
         <LinearLayout style="@style/receiver_address_linear" >

            <TextView
                style="@style/receiver_address_textview"
                android:text="@string/new_confirm_password" />

            <EditText
                android:id="@+id/et_pass_3"
                style="@style/receiver_address_edittext"
                 android:inputType="textPassword"
                android:hint="@string/new_confirm_password_hint" />
        </LinearLayout>

    

    </LinearLayout>
    
    
    <Button 
        android:id="@+id/btn_ok"
        style="@style/all_btn_orange_all_screen"
        android:text="@string/ok"
        
        
        />
    

</LinearLayout>
