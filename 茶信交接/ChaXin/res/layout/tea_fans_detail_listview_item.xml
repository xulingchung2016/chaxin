<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/tea_fans_is_verity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/theme_text_normal_color_gary"
        
        android:paddingBottom="3dip"
        android:paddingTop="3dip"
        android:text="@string/tea_fans_already_verity"
        android:layout_marginLeft="6dip"
        
        />
    
    <View 
        
        style="@style/all_divider_all_screen"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="4dip"
        android:paddingTop="4dip" >

        <ImageView
            android:id="@+id/tea_fans_imageview"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="3dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/shape_imageview_kk"
            android:scaleType="fitXY"
            android:src="@drawable/cha" />

        <LinearLayout
            android:id="@+id/tea_fans_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@id/tea_fans_imageview"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tea_fans_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="匿名用户(189****5632)"
                android:textColor="@color/theme_text_normal_color_black"
                android:textSize="@dimen/textsize_middle_1" />

            <ImageView
                android:id="@+id/tea_fans_detail_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dip"
                android:src="@drawable/user_level_baiyin" />
        </LinearLayout>
        
        
       <TextView
            android:id="@+id/tea_fans_qualified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tea_fans_linear"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/tea_fans_imageview"
            android:text="@string/tea_fans_qualified"
            android:textColor="@color/theme_text_normal_color_gary"
            android:textSize="@dimen/textsize_small" />
        
        

        <TextView
             android:id="@+id/tea_fans_not_phone_verity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="6dip"
            android:layout_marginLeft="8dip"
            android:layout_toRightOf="@id/tea_fans_imageview"
            android:text="@string/tea_fans_not_phone_verity"
            android:textColor="@color/theme_text_normal_color_gary"
            android:textSize="@dimen/textsize_small" />

        <Button
            android:id="@+id/tea_fans_tip"
            android:layout_width="wrap_content"
            android:layout_height="29dip"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
           android:layout_marginBottom="5dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/shape_button_gray"
            android:text="@string/tea_fans_tip_verity"
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_small_1" />
    </RelativeLayout>

</LinearLayout>