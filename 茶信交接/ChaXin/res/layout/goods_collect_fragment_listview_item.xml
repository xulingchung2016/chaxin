<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
     android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/goods_collect_imageview"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="8dip"
        android:background="@drawable/shape_imageview_kk"
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:src="@drawable/cha" />

    <TextView
        android:id="@+id/goods_collect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="6dip"
        android:layout_toRightOf="@id/goods_collect_imageview"
        android:text="张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶张一元茉莉花茶"
        android:maxLines="2"
        android:layout_marginRight="8dip"
        android:textColor="@color/theme_text_normal_color_black"
        android:textSize="@dimen/textsize_middle_1" />

    <TextView
        android:id="@+id/goods_collect_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dip"
        android:layout_marginLeft="8dip"
        android:layout_toRightOf="@id/goods_collect_imageview"
        android:text="￥150.00"
        android:textColor="@color/theme_text_normal_color_red"
        android:textSize="@dimen/textsize_middle_1" />
    <TextView
        android:id="@+id/goods_xl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dip"
        android:layout_marginRight="8dip"
        android:text="150.00"
        android:textColor="@color/Black"
        android:textSize="@dimen/textsize_middle_1" />

</RelativeLayout>