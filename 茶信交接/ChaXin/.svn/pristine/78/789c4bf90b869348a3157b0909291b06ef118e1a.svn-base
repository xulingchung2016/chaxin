<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >

    <include layout="@layout/all_actionbar" />

    <View style="@style/all_divider_all_screen" />

    <RelativeLayout
        android:id="@+id/balace_golden_"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="50dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/my_coin_pading_left"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/my_coin_pading_left"
            android:layout_marginLeft="@dimen/my_coin_pading_left"
            android:text="@string/balace_golden_" />

        <TextView
            android:id="@+id/tv_jb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dip"
            android:text="0.0" />
          <ImageView style="@style/my_arrows_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    <View style="@style/all_divider_all_screen" />
    
    <RelativeLayout
        android:id="@+id/balace_sliver_"
        android:layout_width="fill_parent"
         android:background="@color/theme_background_color_gray"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/my_coin_pading_left"
            android:paddingBottom="@dimen/my_coin_pading_left"
            android:layout_marginLeft="@dimen/my_coin_pading_left"
            android:text="@string/balace_silver_" />

        <TextView
             android:id="@+id/tv_yb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/my_coin_pading_right"
            android:text="" />
        
    </RelativeLayout>
    
    <View style="@style/all_divider_all_screen" />
    
    <RelativeLayout
        android:id="@+id/balace_golden_rechange"
        android:layout_width="fill_parent"
        android:layout_marginTop="6dip"
         android:background="@color/white"
        android:layout_height="50dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingTop="@dimen/my_coin_pading_left"
            android:paddingBottom="@dimen/my_coin_pading_left"
            android:layout_marginLeft="@dimen/my_coin_pading_left"
            android:text="@string/recharge" />

         <ImageView style="@style/my_arrows_right" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
    </RelativeLayout>
    
    

</LinearLayout>