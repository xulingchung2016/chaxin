<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    >
    
    <ImageView
        android:id="@+id/searchgoods_listview_item_goods_picture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dip"
        android:layout_marginLeft="4dip"
        android:layout_marginTop="4dip"
        android:background="@drawable/shape_imageview_kk"
        android:scaleType="fitXY" />
        
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dip"
        android:layout_marginTop="4dip"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/searchgoods_listview_item_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="2dip"
            android:minHeight="25dip"
            android:maxLines="2"
            android:text="红尘"
            android:gravity="center_vertical"
            android:textColor="@color/theme_text_normal_color_black"
            android:textSize="@dimen/textsize_max" />
        
        <TextView
            android:id="@+id/TeaMall_searchgoods_listview_item_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dip"
            android:layout_marginRight="6dip"
            android:layout_below="@+id/searchgoods_listview_item_goods_name"
            android:textColor="@color/red"
            android:text="￥150.00"
            android:textSize="@dimen/textsize_middle_1" />

        

        <TextView
            android:id="@+id/TeaMall_searchgoods_listview_item_goods_sellCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/line_gray"
            android:textSize="@dimen/textsize_middle_1"
             android:layout_below="@+id/TeaMall_searchgoods_listview_item_goods_price"
            android:text="销量：2353" />
         <TextView
            android:id="@+id/TeaMall_searchgoods_listview_item_goods_pl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
             android:textSize="@dimen/textsize_middle_1"
           android:textColor="@color/line_gray"
             android:layout_below="@+id/TeaMall_searchgoods_listview_item_goods_price"
            android:text="评论：2353" />
    </RelativeLayout>


</LinearLayout>