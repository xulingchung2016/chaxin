<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background_color_gray"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey" />

    <RelativeLayout
        android:id="@+id/into_donate_recored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dip" >

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="您已支持"
            android:textColor="@color/theme_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/donate_nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text1"
            android:text="0"
            android:textColor="@color/theme_text_normal_color_orange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/donate_nu"
            android:text="笔,共"
            android:textColor="@color/theme_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/total_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/text2"
            android:text="0"
            android:textColor="@color/theme_text_normal_color_orange"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/total_money"
            android:text="茶币"
            android:textColor="@color/theme_text_color"
            android:textSize="18sp" />

        <ImageView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tea_cishan_right" />
    </RelativeLayout>

    <ListView
        android:id="@+id/my_donate_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dip" />
	<TextView
	        android:id="@+id/tv_emptydata"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center" />
</LinearLayout>