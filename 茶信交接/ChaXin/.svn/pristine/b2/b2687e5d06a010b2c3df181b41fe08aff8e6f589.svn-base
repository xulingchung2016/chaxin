<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_basic_color"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
   >

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/yy_liren"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:background="@color/title_color"
         >

        <TextView
            android:id="@+id/txt_lirenpaihao"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:background="@color/title_color"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="丽人牌号：10000"
            android:layout_toLeftOf="@+id/img_dengji"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/img_dengji"
            android:layout_width="50dip"
            android:layout_alignParentRight="true"
            android:layout_height="18dip"
            android:layout_marginRight="5dip"
           android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/yy_emerald" >
        </ImageView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_color"
        >

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@color/title_color"
            android:gravity="center_vertical"
            android:text="￥150"
            android:textColor="@color/txt_price"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_xiaoliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@color/title_color"
            android:gravity="center_vertical"
            android:text="成交1000次"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/txt_time"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>